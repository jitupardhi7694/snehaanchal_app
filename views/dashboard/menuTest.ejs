<ul>
   <% menu.forEach(function(item) { %>
      <li>
         <a href="<%= item.url %>">
            <%= item.name %>
         </a>
         <% if (item.submenu) { %>
            <ul>
               <% item.submenu.forEach(function(subitem) { %>
                  <li><a href="<%= subitem.url %>">
                        <%= subitem.name %>
                     </a></li>
                  <% }); %>
            </ul>
            <% } %>
      </li>
      <% }); %>
</ul>