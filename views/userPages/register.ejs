<%- include('../layouts/partials/messages.ejs') %>
  <div class="row" >
    <div class="col-md-6 mx-auto">
      <div class="card card-body shadow">
        <h1 class="text-center mb-3"><i class="bi bi-journal-arrow-down"></i> Register</h1>
        <form action="/users/register" method="POST">
              <div class="form-floating mb-3">
                <input autofocus type="text" class="form-control" name="name" id="name" required maxlength="75"
                  placeholder="Full Name" value="<%= typeof name != 'undefined' ? name : '' %>" />
                <label for="name">Full Name</label>
          </div>
              <div class="form-floating mb-3">
                <input type="email" class="form-control" name="email" id="email" required maxlength="75"
                  placeholder="Email" value="<%= typeof email != 'undefined' ? email : '' %>" />
                <label for="email">Email</label>
          </div>
              <div class="form-floating mb-3">
                <input type="password" class="form-control" required name="password" id="password"
                  placeholder="Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                <label for="password">Password</label>
          </div>
              <div class="form-floating mb-3">
                <input type="password" class="form-control" required name="password2" id="password2"
                  placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                <label for="password">Confirm Password</label>
          </div>
              <div class="form-floating">
                <select required aria-required="true" class="form-select mb-2" id="role_id" name="role_id">
                  <option selected disabled value="">select</option>
                  <% userRoles.forEach(function(type) { %>
                    <option value="<%= type.id %>" <%= selectedRoleName===type.id ? 'selected' : '' %>>
                        <%= type.role_name%>
                    </option>
                    <% }) %>
                </select>
                <label for="patient_type_id">Select Role</label>
                <div class="invalid-feedback">role is required</div>
              </div>

          <div class="d-grid gap-2">
            <button type="submit" class="btn bg-primary">Register</button>
          </div>
        </form>
        <div class="row">
          <div class="col">
            <p class="lead mt-4 text-start">Have An Account? <a href="/users/login">Login</a></p>
          </div>
          <div class="col">
            <p class="lead mt-4 text-end">Not Active? Resend <a href="/users/sendActivationLink">Activation Email</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>