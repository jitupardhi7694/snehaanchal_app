<%- include('../layouts/partials/messages.ejs') %>
    <div class="row" style="margin-top: 20px">
        <div class="col-md-8 mx-auto">
            <div class="card card-body shadow">
                <h2 class="text-center mb-3"><i class="bi bi-box-arrow-in-right"></i> &nbsp;Symptoms </h2>
                <form class="needs-validation" method="POST" novalidate id="demo">
                    <div class="mt-2">
                        <div class="row g-2">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" name="id" id="id" hidden>
                                    <select class="form-select mb-2" id="patient_id" name="patient_id" required>
                                        <option selected disabled value="">select</option>
                                        <% patientTypes.forEach(function(type) {if (type.isActive===1) { %>
                                            <option value="<%= type.id %>" <%=selectedPatientType==type.id ? 'selected'
                                                : '' %>><%= type.name %>
                                            </option>
                                            <% }}) %>
                                    </select>
                                    <label for="patient_id">Patient Id:</label>
                                    <div class="invalid-feedback">patient type is required</div>
                                </div>



                            </div>
                            <div class="col-md-6">
                                <div class="form-floating ">
                                    <input autofocus type="text" class="form-control" name="symptom_name"
                                        id="symptom_name" placeholder="symptom  Name" maxlength="100"
                                        value="<%= typeof rows?.symptom_name != 'undefined' ? rows?.symptom_name : '' %>"
                                        required />


                                    <label class="form-label" for="symptom_name">Symptom Name</label>
                                    <div class="invalid-feedback">Please enter a Symptom name</div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row g-2 mt-2">

                        <div class="col-md-6">
                            <div class="form-floating mb-4">

                                <input autofocus type="text" class="form-control" name="severity" id="severity"
                                    placeholder="severity" maxlength="100"
                                    value="<%= typeof rows?.severity != 'undefined' ? rows?.severity : '' %>"
                                    required />

                                <label class="form-label" for="severity">severity</label>
                                <div class="invalid-feedback">Please enter a severity</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="date" class="form-control" name="date_reported" id="date_reported"
                                    value="<%= typeof rows?.date_reported != 'undefined' ? rows?.date_reported : new Date().toISOString().substr(0, 10) %>"
                                    max="<%= new Date().toISOString().substr(0, 10) %>" />
                                <label for="date_reported">Start Date:</label>
                                <div class="invalid-feedback">Please fill start date..</div>
                            </div>

                        </div>


                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-block bg-primary" name="action"
                                value="save">Save</button>
                            <button type="reset" class="btn btn-block bg-warning">Clear</button>
                            <a href="javascript:history.back()" type="submit" class="btn btn-secondary">Back</a>

                        </div>
                </form>
            </div>
        </div>
    </div>