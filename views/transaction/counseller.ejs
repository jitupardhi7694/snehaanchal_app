<%- include('../layouts/partials/messages.ejs') %>
    <div class="row" style="margin-top: 20px">
        <div class="col-md-8 mx-auto">
            <div class="card card-body shadow">
                <h2 class="text-center mb-3"><i class="bi bi-box-arrow-in-right"></i> &nbsp;Counseller Notes </h2>
                <form class="needs-validation" method="POST" novalidate id="demo">
                    <div class="mt-2">
                        <div class="row g-2">
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input autofocus type="text" id="id" name="id" class="form-control"
                                        value="<%= typeof id != 'undefined' ? id : '' %>" hidden />
                                    <select class="form-select mb-2" id="patient_id" name="patient_id" required>
                                        <option selected disabled value="">select</option>
                                        <% patientTypes.forEach(function(type) {if (type.isActive===1) {%>
                                            <option value="<%= type.id %>" <%=selectedPatientType==type.id ? 'selected'
                                                : '' %>>
                                                <%= type.patient_name %>
                                            </option>
                                            <% }}) %>
                                    </select>
                                    <label for="patient_id">Patient Id:</label>
                                    <div class="invalid-feedback">patient type is required</div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-floating">
                                    <select class="form-select mb-2" id="staff_id" name="staff_id" required>
                                        <option selected disabled value="">select</option>
                                        <% staffTypes.forEach(function(type) {if (type.isActive===1) { %>
                                            <option value="<%= type.id %>" <%=selectedstaffTypes==type.id ? 'selected'
                                                : '' %>><%= type.first_name %>
                                            </option>
                                            <% }}) %>
                                    </select>
                                    <label for="staff_id">Staff Id:</label>
                                    <div class="invalid-feedback">Staff Id is required</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input type="datetime-local" class="form-control" name="counselling_date"
                                        id="counselling_date" <% if (typeof rows?.counselling_date !='undefined' &&
                                        rows.counselling_date !==null ) { %>
                                    value="<%= moment(rows.counselling_date).format('YYYY-MM-DDTHH:mm:ss') %>"
                                        <% } else { %>
                                            value="<%= new Date().toISOString().substr(0, 16) %>"
                                                <% } %>
                                                    max="<%= new Date().toISOString().substr(0, 16) %>" >
                                                        <label for="counselling_date">Counselling Date:</label>
                                                        <div class="invalid-feedback">Please fill date..</div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row g-2 mt-2">


                        <div class="col-md-12">
                            <div class="form-floating">

                                <textarea class="form-control" name="counselling_notes"
                                    placeholder="Please Fill your address" id="counselling_notes" maxlength="500"
                                    style="min-height: 100px;" required
                                    style="min-height:100px"><%= typeof rows?.counselling_notes != 'undefined' ? rows?.counselling_notes : '' %></textarea>
                                <label for="counselling_notes">Counselling Notes:</label>
                                <div class="invalid-feedback">Counselling Notes is required</div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <% if (!rows || rows.draft==1) { %>
                            <button type="submit" class="btn btn-block bg-primary" name="action" value="draft">Save
                                Draft</button>
                            <% } else if (rows.draft==0) { %>
                                <button type="submit" class="btn btn-block bg-primary" name="action" value="draft"
                                    style="display:none;">Save Draft</button>
                                <% } %>


                                    <button type="submit" class="btn btn-block bg-primary" name="action"
                                        value="save">Save</button>
                                    <button type="reset" class="btn btn-block bg-warning">Clear</button>
                                    <a href="javascript:history.back()" type="submit" class="btn btn-secondary">Back</a>


                    </div>
                </form>
            </div>
        </div>
    </div>